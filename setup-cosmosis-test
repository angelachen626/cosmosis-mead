#This script is only used if you did a manual installation of CosmoSIS;
#i.e. if you did not use the "bootstrap" script and have no "ups" directory

#See the wiki https://bitbucket.org/joezuntz/cosmosis/wiki/edit/Manual%20Install
#on how to change and use this file


export COSMOSIS_SRC_DIR=/usr/local/cosmosis

#The gnu science library
export GSL_INC=/usr/local/anaconda/pkgs/gsl-2.2.1-h002c638_3/include
export GSL_INCLUDE=/usr/local/anaconda/pkgs/gsl-2.2.1-h002c638_3/include
export GSL_LIB=/usr/local/anaconda/pkgs/gsl-2.2.1-h002c638_3/lib

#The cfitsio FITS library
export CFITSIO_INC=/usr/local/anaconda/pkgs/cfitsio-3.410-2/linclude
export CFITSIO_INCLUDE=/usr/local/anaconda/pkgs/cfitsio-3.410-2/linclude
export CFITSIO_LIB=/usr/local/anaconda/pkgs/cfitsio-3.410-2/lib

export FFTW_LIBRARY=/usr/local/anaconda/pkgs/fftw-3.3.7-0/lib
export FFTW_INC_DIR=/usr/local/anaconda/pkgs/fftw-3.3.7-0/include
export FFTW_INCLUDE_DIR=/usr/local/anaconda/pkgs/fftw-3.3.7-0/include


#The lapack linear algebra package
#On a mac this should just say "-framework Accelerate" or "-framework veclib" if that doesn't work
export LAPACK_LINK="-L/usr/local/anaconda/pkgs/lapack-3.6.1-1/lib -llapack -lblas"


#You may need to add :${DYLD_LIBRARY_PATH} to the end of this
export DYLD_LIBRARY_PATH=/opt/local/lib/gcc5:${COSMOSIS_SRC_DIR}/cosmosis/datablock/:${COSMOSIS_SRC_DIR}/cosmosis-standard-library/likelihood/:${COSMOSIS_SRC_DIR}/cosmosis-standard-library/likelihood/planck/plc-2.0/lib/:${COSMOSIS_SRC_DIR}/cosmosis-standard-library/likelihood/planck2015/plc-2.0/lib/
#You may need to add :${LD_LIBRARY_PATH} to the end of this
export LD_LIBRARY_PATH=/opt/local/lib/gcc5:${COSMOSIS_SRC_DIR}/cosmosis/datablock/:${COSMOSIS_SRC_DIR}/cosmosis-standard-library/likelihood/planck/plc-2.0/lib/:${COSMOSIS_SRC_DIR}/cosmosis-standard-library/likelihood/planck2015/plc-1.0/lib/


export PYTHONPATH=${COSMOSIS_SRC_DIR}:${PYTHONPATH}
export PATH=${COSMOSIS_SRC_DIR}/bin:/opt/local/bin/gcc5:/usr/local/anaconda/bin/python:${PATH}
